<div class="container my-4">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 bg-white p-4 shadow">

      <h1><%= @profile.username %> Perfil
        <%= link_to edit_user_profile_path(@user, @profile), class: 'ms-5' do %>
          <i class="fas fa-pencil-alt fa-xs" style="color: black;"></i>
        <% end %></h1>

      <div class="badge-container d-flex flex-wrap">
        <% {
          gluten: 'No gluten',
          dairy: 'No lácteos',
          peanut: 'No nueces',
          seafood: 'No comida marina',
          soy: 'No soya',
          egg: 'No huevos',
          sesame: 'No ajonjolí',
          sugar: 'No azúcar',
          vegetarian: 'Vegetariano',
          vegan: 'Vegano'
        }.each do |key, label| %>
          <% if @profile.send(key) %>
            <span class="badge badge-pill badge-success me-2 mb-2"><%= label %></span>
          <% end %>
        <% end %>
      </div>

      <div class="d-flex justify-content-center mb-3">
        <%= link_to 'Escanear barcode', new_user_profile_barcode_path(@user, @profile), class: 'btn btn-info btn-lg rounded-pill px-5 py-3', style: 'padding: 50px;' %>
      </div>

      <div class="mt-3">
        <%= link_to 'Edit', edit_user_profile_path(@user, @profile), class: 'btn btn-primary me-2' %>
        <%= link_to 'Mis Perfiles', user_profiles_path(@user), class: 'btn btn-outline-secondary me-2' %>
          <%= link_to user_profile_path(@user, @profile), data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro de que deseas eliminar el perfil?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>

      </div>

    </div>
  </div>
</div>
