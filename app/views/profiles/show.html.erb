        <li>Peanut Free: <%= @profile.peanut %></li>
        <li>Seafood Free: <%= @profile.seafood %></li>
        <li>Soy Free: <%= @profile.soy %></li>
        <li>Egg Free: <%= @profile.egg %></li>
        <li>Sesame Free: <%= @profile.sesame %></li>
