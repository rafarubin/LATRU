<%= simple_form_for([@user, @profile]) do |form| %>

  <div class="form-group">
    <%= form.input :username, label: 'Usuario', placeholder: 'Ingresa tu usario' %>
  </div>

  <!-- Campos de selecciÃ³n tipo checkbox para restricciones alimentarias -->
  <div class="form-group">
    <%= form.input :gluten, as: :boolean, label: 'No Gluten' %>
  </div>

  <div class="form-group">
    <%= form.input :dairy, as: :boolean, label: 'No Lacteos' %>
  </div>

  <div class="form-group">
    <%= form.input :peanut,  as: :boolean, label: 'No Nueces' %>
  </div>

  <div class="form-group">
    <%= form.input :seafood, as: :boolean, label: 'No comida marina' %>
  </div>

  <div class="form-group">
    <%= form.input :soy, as: :boolean, label: 'No Soya' %>
  </div>

  <div class="form-group">
    <%= form.input :egg, as: :boolean, label: 'No huevos' %>
  </div>

  <div class="form-group">
    <%= form.input :sesame, as: :boolean, label: 'No ajonjoli' %>
  </div>

  <div class="form-group">
    <%= form.input :sugar, as: :boolean, label: 'No Azucar' %>
  </div>

  <div class="form-group">
    <%= form.input :vegetarian, as: :boolean, label: 'Vegetariano' %>
  </div>

  <div class="form-group">
    <%= form.input :vegan, as: :boolean, label: 'Vegano' %>
  </div>

  <div class="actions">
    <%= form.submit 'Nuevo Perfil' %>
    <%= link_to 'Todos mis Perfiles', user_profiles_path(@user) %>
  </div>
<% end %>
