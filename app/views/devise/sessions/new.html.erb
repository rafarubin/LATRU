<div class="container">
  <div class="row d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-sm-8 col-md-6">
      <h2 class="text-center">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", placeholder: "Email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", placeholder: "Password" } %>
          <%= f.input :remember_me, as: :boolean, label: "Remember me" if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
           <%# user_profiles_path(current_user) %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
